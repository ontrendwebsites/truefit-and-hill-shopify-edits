<header class="header {% if inverted %}header--is-inverted{% endif %}">
  <div class="header__outer">
    <div class="header__inner h4--sans">
      <div class="header__section header__section--left">
        <ul class="header__list">
          <li class="header__item header__functional header__functional--shop">
            <button type="button" class="header__toggle header__link" name="header-toggle">
              <span class="header__burger"></span>
              <span class="header__item--desktop">Shop</span>
            </button>
            {% include 'nav' %}
          </li>
          {% for link in linklists.header-update.links %}
            {% if forloop.index <= 2%}
              <li class="header__item header__item--desktop">
                <a class="header__link" href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="header__section header__section--center">
        <a href="/" class="header__logo">
          {% include 'svg' with {
            classes: 'header__logo--large',
            name: 'logo',
            title: 'logo'
          } %}
          {% include 'svg' with {
            classes: 'header__logo--small',
            name: 'shield',
            title: 'shield'
          } %}
        </a>
      </div>
      <div class="header__section header__section--right">
        <ul class="header__list">
          {% for link in linklists.header-update.links %}
            {% if forloop.index > 2 %}
              <li class="header__item header__item--desktop">
                <a class="header__link" href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% endif %}
          {% endfor %}
          {% comment %}
          <li class="header__item header__item--desktop">
            <a class="header__link" href="/account">Account</a>
          </li>
          {% endcomment %}
          {% comment %}
          {% if settings.currencyEnabled %}
          <li class="header__item header__functional">
            <div class="header__link header__currency">
              {% include 'currency-selector' %}
            </div>
          </li>
          {% endif %}
          {% endcomment %}
          {% if cart.item_count !=0 %}
          <li class="header__item header__functional">
            <button 
              class="header__cart js-cart__toggle"
              type="button" 
              name="cart-toggle" 
              data-cart-items="{{ cart.items | size }}"
            >
                {% include 'svg', classes: 'header__cart-icon header__cart-icon--fill', name: 'cart-fill', title: 'cart' %}
                {% include 'svg', classes: 'header__cart-icon header__cart-icon--outline', name: 'cart-outline', title: 'cart' %}
                <span class="header__cart-total js-cart__items-count">{{ cart.items | size }}</span>
              </button>
          </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
</header>